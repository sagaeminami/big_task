<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-4 col-md-offset-4 form-content">
      <h1>ツイート詳細</h1>

      <p>Contents: <%=@clone.contents%></p>

      <% unless @clone.user == current_user %>
        <% if @favorite.present? %>
          <%= link_to 'お気に入り解除する', favorite_path(clone_id: @clone.id), method: :delete, class: 'btn btn-danger' %>
        <% else %>
          <%= link_to 'お気に入りする', favorites_path(clone_id: @clone.id), method: :post, class: 'btn btn-prymary' %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
